= simple_form_for(@event) do |f|
  -# = f.error_notification

  .field.form-group
    = f.input :title
    = f.input :body, :input_html => { :rows => 10 }
    = f.input :start, :input_html => { class:"datepicker form-control" },
            :as => :string, :dateFormat => "mm-dd-yy"
    = f.input :end, :input_html => { class:"datepicker form-control" },
            :as => :string, :dateFormat => "mm-dd-yy"

  .form-actions.form-group
    = f.button :submit

    :javascript
      $('.datepicker').datepicker({ 
          dateFormat: "yy-mm-dd" }
        );